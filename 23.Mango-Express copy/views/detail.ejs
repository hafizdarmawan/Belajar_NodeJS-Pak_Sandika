<div class="container">
    <div class="mt-3">
        <div class="row">
            <div class="col-md-8">
                <h2>Detail Contact</h2>
                <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    Data tidak tersedia, <a href="/contact" class="alert-link">kembali</a>. untuk menu lainya.
                </div>
                <% }else{ %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%= contact.nama%></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= contact.nohp %> </h6>
                        <p class="card-text"><%= contact.email %> </p>
                        <a href="/contact/edit/<%= contact.nama %> " class="btn btn-info shadow rounded-pill"><i
                                class="bi bi-pencil-square"></i> Ubah</a>
                        <a href="/contact/delete/<%= contact.nama %> " class="btn btn-danger shadow rounded-pill"
                            onclick="return confirm('Yakin akan dihapus?')"><i class="bi bi-trash2-fill"></i> Hapus</a>
                        <a href="/contact" class="card-link mt-3">Kembali</a>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>