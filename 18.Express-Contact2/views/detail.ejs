<div class="container">
    <div class="mt-3">
        <div class="row">
            <div class="col-md-8">
                <h2>Detail Contact</h2>
                <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    Data tidak tersedia, <a href="/contact" class="alert-link">kembali</a>. untuk menu lainya.
                </div>
                <% }else{ %>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%= contact.nama%></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHP %> </h6>
                        <p class="card-text"><%= contact.email %> </p>
                        <a href="#" class="card-link">Hubungi Sekarang</a>
                        <a href="/contact" class="card-link">Kembali</a>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</div>